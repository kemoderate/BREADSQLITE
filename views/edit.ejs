<!-- edit.ejs -->

<html>

<head>
  <title>Edit Data</title>
  <link rel="stylesheet" href="/style.css">
</head>

<body>
  <div class="container">
    <h1>Edit Data</h1>
    <form action="/edit/<%= entry.id %>" method="POST">
      <div class="form-group">
        <label for="ID">ID:</label>
        <input type="text" id="id" name="id" value="<%= entry.id %>" required readonly>
      </div>
      <div class="form-group">
        <label for="string">String:</label>
        <input type="text" id="string" name="string" value="<%= entry.string %>" required>
      </div>
      <div class="form-group">
        <label for="integer">Integer:</label>
        <input type="number" id="integer" name="integer" value="<%= entry.integer %>" required>
      </div>
      <div class="form-group">
        <label for="float">Float:</label>
        <input type="number" step="any" id="float" name="float" value="<%= entry.float %>" required>
      </div>
      <div class="form-group">
        <label for="date">Date:</label>
        <input type="date" id="date" name="date" value="<%= entry.date %>" required>
      </div>
      <div class="form-group">
        <label for="boolean">Boolean:</label>
        <select id="boolean" name="boolean" required>
          <option value="true" <%=entry.boolean ? 'selected' : '' %>>True</option>
          <option value="false" <%=!entry.boolean ? 'selected' : '' %>>False</option>
        </select>
      </div>
      <br>
      <br>
      <div class="form-group">
        <button class="button button-primary" type="submit">Save</button>
        <button type="button" onclick="location.href='/'" class="button button-secondary">Cancel</button>
      </div>
    </form>
  </div>
</body>

</html>